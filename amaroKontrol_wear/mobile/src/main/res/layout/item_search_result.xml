<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_item_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:cropToPadding="true"
        android:padding="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_collection_artist" />

    <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
        android:id="@+id/search_item_title"
        style="@style/PlayNowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/search_item_cover"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="5dp"
        android:textColor="#cccccc"
        android:textSize="20sp"
        android:textStyle="normal"
        app:font="cbold" />

    <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
        android:id="@+id/search_item_artist"
        style="@style/PlayNowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_item_title"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/search_item_cover"
        android:fontFamily="sans-serif-light"
        android:textColor="#cccccc"
        android:textSize="16sp"
        android:textStyle="normal"
        app:font="cbold" />

    <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
        android:id="@+id/search_item_album"
        style="@style/PlayNowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_item_artist"
        android:layout_toRightOf="@+id/search_item_cover"
        android:textColor="#cccccc"
        android:textSize="12sp"
        app:font="clight" />

</RelativeLayout>