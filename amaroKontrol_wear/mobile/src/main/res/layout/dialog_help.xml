<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
        style="@style/HelpStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/help_settings"
        app:font="creg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/help_settings" />

    <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
        style="@style/HelpStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/help_script"
        app:font="creg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/help_script" />

    <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
        style="@style/HelpStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/help_kontrol"
        app:font="creg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/help_kontrol" />

    <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
        style="@style/HelpStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_restart"
        app:font="creg" />

</LinearLayout>
