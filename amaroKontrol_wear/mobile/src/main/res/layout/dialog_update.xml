<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
            android:id="@+id/update_window_update_text"
            style="@style/PlayNowArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="creg"
            android:text="@string/help_update_title"
            android:textSize="30sp" />
        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_below="@+id/update_window_update_text" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
                style="@style/HelpStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="light"
                android:layout_marginBottom="10dp"
                android:text="@string/help_update_subtitle" />
            
            <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
                style="@style/HelpStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="light"
                android:layout_marginBottom="10dp"
                android:text="@string/help_settings" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/help_settings" />

            <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
                style="@style/HelpStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="light"
                android:layout_marginBottom="10dp"
                android:text="@string/help_script" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/help_script" />

            <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
                style="@style/HelpStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="light"
                android:layout_marginBottom="10dp"
                android:text="@string/help_kontrol_update" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/help_kontrol" />

            <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
                style="@style/HelpStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="light"
                android:text="@string/help_restart" />

            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#aaa"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp" />

            <com.mv2studio.amarok.kontrol.ui.View.CustomTextView
                style="@style/HelpStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="light"
                android:layout_marginBottom="10dp"
                android:text="@string/help_update_git" />

            <ImageView
                android:id="@+id/githubImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/github_logo"
                android:scaleType="centerInside"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>